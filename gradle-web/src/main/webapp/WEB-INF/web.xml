<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>OAuth2TokenGenerator</display-name>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>accessToken</servlet-name>
        <servlet-class>com.test.weixin.pay.servlet.WechatTokenServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>accessToken</servlet-name>
        <url-pattern>/wechat/test/token</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>openId</servlet-name>
        <servlet-class>com.test.weixin.pay.servlet.WechatOpenIdServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>openId</servlet-name>
        <url-pattern>/wechat/test/openid</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>pay</servlet-name>
        <servlet-class>com.test.weixin.pay.servlet.WechatToPayServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>pay</servlet-name>
        <url-pattern>/wechat/test/pay</url-pattern>
    </servlet-mapping>



</web-app>
